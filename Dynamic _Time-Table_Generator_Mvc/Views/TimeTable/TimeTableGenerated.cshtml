@model List<List<string>>

<h2 class="mt-4">Timetable</h2>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-striped table-bordered table-responsive">
                <thead>
                    <tr>
                        @for (int i = 0; i < Model[0].Count; i++)
                        {
                            <th>Day @(i + 1)</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in Model)
                    {
                        <tr>
                            @foreach (var subject in row)
                            {
                                <td>@subject</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>

            <div class="text-center">
                @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary btn-sm" })
            </div>
        </div>
    </div>
</div>
